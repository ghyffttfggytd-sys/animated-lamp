-- Services
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- GUI
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.ResetOnSpawn = false

-- ‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î‡πÄ‡∏°‡∏ô‡∏π
local toggleButton = Instance.new("TextButton", gui)
toggleButton.Size = UDim2.new(0, 80, 0, 40)
toggleButton.Position = UDim2.new(0,10,0,10)
toggleButton.Text = "‡πÄ‡∏°‡∏ô‡∏π"
toggleButton.BackgroundColor3 = Color3.fromRGB(255,50,50)
toggleButton.TextColor3 = Color3.new(1,1,1)
toggleButton.TextScaled = true
toggleButton.BorderSizePixel = 0
toggleButton.ZIndex = 10

-- Frame ‡πÄ‡∏°‡∏ô‡∏π‡∏´‡∏•‡∏±‡∏Å
local menuFrame = Instance.new("Frame", gui)
menuFrame.Size = UDim2.new(0, 250, 0, 300)
menuFrame.Position = UDim2.new(0, 10, 0, 60)
menuFrame.BackgroundColor3 = Color3.fromRGB(20,20,20)
menuFrame.BorderColor3 = Color3.fromRGB(255,0,0)
menuFrame.BorderSizePixel = 2
menuFrame.Visible = false
menuFrame.Active = true
menuFrame.Draggable = true

-- ‡∏ä‡∏∑‡πà‡∏≠‡πÄ‡∏°‡∏ô‡∏π
local title = Instance.new("TextLabel", menuFrame)
title.Size = UDim2.new(1,0,0,40)
title.BackgroundColor3 = Color3.fromRGB(255,0,0)
title.Text = "üéÆ ‡πÄ‡∏°‡∏ô‡∏π‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤"
title.TextScaled = true
title.TextColor3 = Color3.new(1,1,1)
title.BorderSizePixel = 0

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏õ‡∏∏‡πà‡∏°‡∏™‡∏ß‡∏¢
local function createButton(parent, text, posY, color, callback)
    local btn = Instance.new("TextButton", parent)
    btn.Size = UDim2.new(1,-20,0,40)
    btn.Position = UDim2.new(0,10,0,posY)
    btn.Text = text
    btn.BackgroundColor3 = color
    btn.TextColor3 = Color3.new(1,1,1)
    btn.TextScaled = true
    btn.BorderSizePixel = 0
    btn.MouseButton1Click:Connect(callback)
    return btn
end

-- ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î‡∏£‡∏∞‡∏ö‡∏ö
local espEnabled = true
local lockEnabled = true
local circleEnabled = true

-- ‡∏õ‡∏∏‡πà‡∏° ESP
createButton(menuFrame, "ESP: ‡πÄ‡∏õ‡∏¥‡∏î", 50, Color3.fromRGB(0,150,0), function(btn)
    espEnabled = not espEnabled
    if espEnabled then
        btn.Text = "ESP: ‡πÄ‡∏õ‡∏¥‡∏î"
        btn.BackgroundColor3 = Color3.fromRGB(0,150,0)
    else
        btn.Text = "ESP: ‡∏õ‡∏¥‡∏î"
        btn.BackgroundColor3 = Color3.fromRGB(150,0,0)
    end
end)

-- ‡∏õ‡∏∏‡πà‡∏° Lock Target
createButton(menuFrame, "Lock Target: ‡πÄ‡∏õ‡∏¥‡∏î", 100, Color3.fromRGB(0,150,0), function(btn)
    lockEnabled = not lockEnabled
    if lockEnabled then
        btn.Text = "Lock Target: ‡πÄ‡∏õ‡∏¥‡∏î"
        btn.BackgroundColor3 = Color3.fromRGB(0,150,0)
    else
        btn.Text = "Lock Target: ‡∏õ‡∏¥‡∏î"
        btn.BackgroundColor3 = Color3.fromRGB(150,0,0)
    end
end)

-- ‡∏õ‡∏∏‡πà‡∏°‡∏ß‡∏á‡∏Å‡∏•‡∏≤‡∏á‡∏à‡∏≠
createButton(menuFrame, "‡∏ß‡∏á‡∏Å‡∏•‡∏≤‡∏á‡∏à‡∏≠: ‡πÄ‡∏õ‡∏¥‡∏î", 150, Color3.fromRGB(0,150,0), function(btn)
    circleEnabled = not circleEnabled
    if circleEnabled then
        btn.Text = "‡∏ß‡∏á‡∏Å‡∏•‡∏≤‡∏á‡∏à‡∏≠: ‡πÄ‡∏õ‡∏¥‡∏î"
        btn.BackgroundColor3 = Color3.fromRGB(0,150,0)
    else
        btn.Text = "‡∏ß‡∏á‡∏Å‡∏•‡∏≤‡∏á‡∏à‡∏≠: ‡∏õ‡∏¥‡∏î"
        btn.BackgroundColor3 = Color3.fromRGB(150,0,0)
    end
end)

-- ‡∏õ‡∏∏‡πà‡∏°‡∏õ‡∏¥‡∏î‡πÄ‡∏°‡∏ô‡∏π
createButton(menuFrame, "‡∏õ‡∏¥‡∏î‡πÄ‡∏°‡∏ô‡∏π", 200, Color3.fromRGB(255,50,50), function()
    menuFrame.Visible = false
end)

-- ‡∏™‡∏•‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î‡πÄ‡∏°‡∏ô‡∏π
toggleButton.MouseButton1Click:Connect(function()
    menuFrame.Visible = not menuFrame.Visible
end)
